{

  "manifest_version": 2,
  "name": "Invidious Redirect",
  "version": "1.9.0",

  "description": "Redirects all YouTube links to any Invidious instance. Previously hooktube-redirect.",
  
  "icons": {
    "48": "icons/hooktube-48.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "js": ["makehook.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/hooktube-48.ico",
    "default_title": "Invidious Redirect",
    "default_popup": "options.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "invidious-redirect@github.com"
    }
  }

}
