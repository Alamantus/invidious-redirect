{

  "manifest_version": 2,
  "name": "Invidious Redirect",
  "version": "1.5",

  "description": "Redirects all YouTube links to Invidious. Previously hooktube-redirect.",
  
  "icons": {
    "48": "icons/hooktube-48.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "js": ["makehook.js"]
    }
  ]

}
